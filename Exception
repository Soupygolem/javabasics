public class Exception {
    public static void main(String[] args) {
        try {
            int[] numbers = {1, 2, 3};
            System.out.println("Accessing the 4th element: " + numbers[3]); 
        } catch (ArrayIndexOutOfBoundsException e) {
            System.out.println("Error: You tried to access an index that doesn't exist in the array.");
        }
        try {
            int result = 10 / 0;
            System.out.println("Result of division: " + result);
        } catch (ArithmeticException e) {
            System.out.println("Error: Division by zero is not allowed.");
        }
        System.out.println("Program caught the errors and completed execution successfully.");
    }
}
